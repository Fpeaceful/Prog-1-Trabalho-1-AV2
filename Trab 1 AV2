#include<iostream.h>
#include<stdio.h>

int main()

{
    float peso, altura, imc;
    printf("informe seu peso:");
    scanf("%f", &peso);
    printf("informe sua altura:");
    scanf("%f", &altura);
    imc = peso/(altura*altura);
    printf( "Seu IMC= %f \n", imc);
    
        if((imc > 19.99) && (imc < 25.01))
                printf ("Seu IMC esta normal \n");
                
                else
                if(imc < 19)
                 printf ("Seu IMC esta abaixo do ideal \n");
    
                 else
                 if(imc > 25)
                 printf ("Seu IMC esta acima do ideal \n");
   
    
    system ("PAUSE");
    return 0;
    
            
}
